{
  "name": "@hermes/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && esbuild src/server.ts --bundle --platform=node --format=esm --outfile=dist/server.js --packages=external --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url);\"",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hermes/db": "workspace:*",
    "@hono/node-server": "^1.14.0",
    "@hono/zod-validator": "^0.5.0",
    "hono": "^4.7.4",
    "nodemailer": "^6.9.16",
    "resend": "^6.9.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/nodemailer": "^6.4.17",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
