{
  "name": "hermes",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "db:generate": "pnpm --filter @hermes/db generate",
    "db:push": "pnpm --filter @hermes/db push",
    "db:studio": "pnpm --filter @hermes/db studio",
    "db:seed": "pnpm --filter @hermes/db seed",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "turbo": "^2.4.4",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@9.15.0"
}
